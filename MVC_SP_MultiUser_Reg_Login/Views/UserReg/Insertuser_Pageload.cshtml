@model MVC_SP_MultiUser_Reg_Login.Models.Userinsert
@{
    ViewBag.Title = "Insertuser_Pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Insert User Details</h2>
<div>

    @using (Html.BeginForm("InsertUser_Click", "UserReg", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div>
            <label>Name:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.name)
            @Html.ValidationMessageFor(m => m.name)
        </div>

        <div>
            <label>Age:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.age)
        </div>

        <div>
            <label>Address:</label>
        </div>
        <div>
            @Html.TextAreaFor(m => m.address)
            @Html.ValidationMessageFor(m => m.address)
        </div>

        <div>
            <label>Email:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.email)
        </div>

        <div>
            <label>Photo:</label>
        </div>
        <div>
            @Html.TextBox("file", "", new { type = "file" })
        </div>

        <div>
            <label>Username:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.username)
        </div>

        <div>
            <label>Password:</label>
        </div>
        <div>
            @Html.PasswordFor(m => m.pwd)
        </div>

        <div>
            <label>Confirm Password:</label>
        </div>
        <div>
            @Html.PasswordFor(m => m.cpwd)
            @Html.ValidationMessageFor(m => m.cpwd)
        </div>

        <div>
            <input type="submit" value="Insert" />
            @Html.DisplayFor(m => m.usermsg)
        </div>

    }
</div>

